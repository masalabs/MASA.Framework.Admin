<FormModal Visible=@Visible
           Title=@Title
           Width=@Width
           Model=@Data
           OnCancel=@HandleOnCancel
           OnOk=@HandleOnOk>
    <MRow>
        <MCol Cols="12">
            <MRadioGroup @bind-Value="Data.ReasonType" TValue=ReasonTypes>
                <LabelContent>
                    下架原因
                </LabelContent>
                <ChildContent>
                    @foreach (var item in Enum<ReasonTypes>.GetEnumObjectList<ReasonTypes>())
                    {
                        <MRadio Value="@item.Value" Label=@item.Name TValue="ReasonTypes"></MRadio>
                    }
                </ChildContent>
            </MRadioGroup>
        </MCol>
        <MCol Cols="12">
            <DefaultTextField Label="原因详情"
                              @bind-Value="Data.ReasonDetail">
            </DefaultTextField>
        </MCol>
    </MRow>
</FormModal>