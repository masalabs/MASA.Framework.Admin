@namespace MASA.Framework.Admin.Management.Components
@typeparam TValue

<MDatePicker Value="Date"
             ValueChanged="DateChanged"
             TValue="DateOnly?"
             NoTitle="NoTitle">
    <MRow Dense Align="AlignTypes.Center" Style="width: min-content; padding: 0 12px;">
        <MCol Cols="4">
            <MAutocomplete Dense Label="时"
                           HideDetails="true"
                           Value="Hour"
                           ValueChanged="HourChanged"
                           TValue="int"
                           TItem="int"
                           TItemValue="int"
                           Items="Hours"
                           ItemText="h => h.ToString().PadLeft(2, '0')"
                           ItemValue="h => h"
                           OnFocus="OnHourFocus"
                           OnBlur="OnHourBlur"
                           MenuProps="menu => menu.MaxHeight = 176">
            </MAutocomplete>
        </MCol>
        <MCol Cols="4">
            <MAutocomplete Dense Label="分"
                           HideDetails="true"
                           Value="Minute"
                           ValueChanged="MinuteChanged"
                           TValue="int"
                           TItem="int"
                           TItemValue="int"
                           Items="Minutes"
                           ItemText="m => m.ToString().PadLeft(2, '0')"
                           ItemValue="m => m"
                           OnFocus="OnMinuteFocus"
                           OnBlur="OnMinuteBlur"
                           MenuProps="menu => menu.MaxHeight = 176">
            </MAutocomplete>
        </MCol>
        <MCol Cols="4">
            <MAutocomplete Dense Label="秒"
                           HideDetails="true"
                           Value="Second"
                           ValueChanged="SecondChanged"
                           TValue="int"
                           TItem="int"
                           TItemValue="int"
                           Items="Seconds"
                           ItemText="s => s.ToString().PadLeft(2, '0')"
                           ItemValue="s => s"
                           OnFocus="OnSecondFocus"
                           OnBlur="OnSecondBlur"
                           MenuProps="menu => menu.MaxHeight = 176">
            </MAutocomplete>
        </MCol>
        @if (ChildContent != null)
        {
            <MCol Cols="12" Style="display: flex">
                @ChildContent
            </MCol>
        }
    </MRow>
</MDatePicker>