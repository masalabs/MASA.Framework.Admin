@page "/permission"
@inherits AdminCompontentBase

<div class="text-h6">@T("Authority Management")</div>

<MAlert Color="light-blue lighten-5" Class="my-4">
    @T("Authing's permission system is based on RBAC (Role-based access control, role-based access control) and can perform more fine-grained permission control through environment attributes. It can not only manage your business system entity resources, but also manage resource permissions such as menus and buttons in your application. For details, please refer to the documentation.")   
</MAlert>

<MCard>
    <MCardText Class="px-6 pb-6">
        <MTabs @bind-Value="tab" HideSlider Height=10 Color="sample-green">
            <MTab Value="@("Object")">
                <MIcon Size=16 Color="@(tab=="Object"?"sample-green":"fill")">mdi-circle</MIcon>
                <span class="ml-2 text-btn @(tab=="Object"?"neutral--text":"")">@T("Object")</span>
            </MTab>
            <MTab Class="ml-2" Value="@("Role")">
                <MIcon Size=16 Color="@(tab=="Role"?"sample-green":"fill")">mdi-circle</MIcon>
                <span class="ml-2 text-btn @(tab=="Role"?"neutral--text":"")">@T("Role")</span>
            </MTab>
            <MTab Class="ml-2" Value="@("Authorize")">
                <MIcon Size=16 Color="@(tab=="Authorize"?"sample-green":"fill")">mdi-circle</MIcon>
                <span class="ml-2 text-btn @(tab=="Authorize"?"neutral--text":"")">@T("Authorize")</span>
            </MTab>
        </MTabs>
        <MTabsItems @bind-Value="tab" Class="mt-4">
            <MTabItem Value="@("Object")">
               <Masa.Framework.Admin.RCL.RBAC.Pages.Permission.Object.Object />
            </MTabItem>

            <MTabItem Value="@("Role")">
               <Masa.Framework.Admin.RCL.RBAC.Pages.Permission.Role.Role />
            </MTabItem>

            <MTabItem Value="@("Authorize")">
                <Masa.Framework.Admin.RCL.RBAC.Pages.Permission.Authorize.Authorize />
            </MTabItem>
        </MTabsItems>
    </MCardText>
</MCard>

@code {
    private StringNumber? tab;
}